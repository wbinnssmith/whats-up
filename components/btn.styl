@require '../colors'

.btn
  font-family: Roboto, sans-serif
  outline: 0
  border: 0

.btn--action
  height: 56px
  width: 56px
  border-radius: 50%
  box-shadow: 0 2px 4px rgba(0,0,0,.25)

.btn--purple
  color: white
  background-color: transparentify($purple)

  &:hover
    background-color: lighten($purple, 20%);

